@namespace ThingsGateway.Gateway.Razor
@using ThingsGateway
@using ThingsGateway.Authentication
@if (!string.IsNullOrEmpty(WebsiteOption.Value.WikiUrl))
{
    <div>
        <div class=" ps-1 mb-2">@AboutLocalizer["Docs"]</div>
    </div>
    <div class="my-2 ms-4">
        <a target="_blank" href="@WebsiteOption.Value.WikiUrl">@WebsiteOption.Value.WikiUrl</a>
    </div>
}

@if (!string.IsNullOrEmpty(WebsiteOption.Value.QQGroup1Link))
{
    <div class="my-4">
        <div class=" ps-1 mb-2">@AboutLocalizer["Community"]</div>
        <div class="my-2 ms-4">
            <span>@AboutLocalizer["QQGroup"]</span> <a target="_blank" href="@WebsiteOption.Value.QQGroup1Link">@WebsiteOption.Value.QQGroup1Number</a>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(WebsiteOption.Value.Copyright))
{

    <div class="mt-4">
        <span>@WebsiteOption.Value.Copyright</span>
    </div>
}




